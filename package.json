    "dev": "electron . --dev",
    "build": "electron-builder",
    "install-deps": "npm install"
  },
  "keywords": [
    "voice",
    "productivity",
    "music",
    "ai",
    "electron"
  ],
  "author": "Voice Companion",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
