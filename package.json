    "axios": "^1.6.0",
    "dotenv": "^17.2.0",
    "node-fetch": "^3.3.2",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^4.20.0",
    "speaker": "^0.5.4",
    "tone": "^14.7.77",
    "wav": "^1.0.2",
    "ws": "^8.14.2"
